pragma solidity ^0.8.0;

contract CreateVanityContract {
    
    //Put the byte code of the contract you want to deploy between the quotes on the next line
    bytes applyContrByteCode = hex"";
    
    function createContract(bytes32 salt) public returns (address){
        bytes memory _bytecode = applyContrByteCode;
        address _addr;
        require(_bytecode.length != 0, "Create2: bytecode length is zero");
        
        assembly{
            _addr := create2(callvalue(), add(_bytecode, 0x20), mload(_bytecode), salt)
        }
        require(_addr != address(0), "Create2: Failed on deploy");
        return _addr;

    }   
}